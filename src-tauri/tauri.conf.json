{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Workmate",
  "version": "1.0.0",
  "identifier": "com.bentrl.workmate",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Workmate",
        "width": 1280,
        "height": 720,
        "minWidth": 720,
        "minHeight": 480,
        "maximized": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/workmate-logo.ico"]
  }
}
